<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs")%>

  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="blogs content">
      <h2>All Blogs</h2>
      <!-- write all the blogs -->
      <% if (blogs.length>0) { %> <% blogs.forEach(element => { %>
